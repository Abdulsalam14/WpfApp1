        <Button Content="5" Height="130" Width="200" Margin="285,250,285,50" FontSize="40" Background="Violet" BorderBrush="Black" BorderThickness="5" Click="Button_Click" PreviewMouseRightButtonDown="Button_PreviewMouseRightButtonDown"/>
